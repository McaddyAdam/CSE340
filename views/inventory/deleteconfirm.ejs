<!-- adds h1, good seo, and a heading for the page! -->
<% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
    } %>
  
  <!-- displays error messages -->
  <%- messages() %>
  
  <!-- display errors -->
  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
    </ul>
  <% } %>
  
  <!-- display the contents of the page -->
  <form id="deleteForm" class="form addvehicle-form" action="/inv/delete" method="post">
    <p>*Confirm Deletion - The delete is permanent and CANNOT be undone.</p>
    <fieldset class="form--fieldset addvehicle-form--fieldset"> 
  
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" placeholder="Min of 3 characters" value="<%= locals.inv_make %>" minlength="3" readonly>
      
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" placeholder="Min of 3 characters" value="<%= locals.inv_model %>" minlength="3" readonly>
      
      <label for="inv_year">Year:</label>
      <input type="text" id="inv_year" name="inv_year" placeholder="4-digit year" value="<%= locals.inv_year %>" pattern="^\d{4}$" readonly>
      
      <label for="inv_price">Price:</label>
      <input type="text" id="inv_price" name="inv_price" placeholder="Decimal or integer" value="<%= locals.inv_price %>" pattern="^\d+(\.\d{1,2})?$" readonly>
  
      <input type="submit" name="submit" value="Delete Vehicle" id="deleteBtn">
      
      <input type="hidden" name="inv_id"
      <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
      <% } %>>
    </fieldset>
  </form>